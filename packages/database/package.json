{
  "name": "@repo/database",
  "version": "0.0.1",
  "private": true,
  "main": "./client/index.js",
  "types": "./client/index.d.ts",
  "exports": {
    ".": {
      "types": "./client/index.d.ts",
      "default": "./client/index.js"
    }
  },

  "scripts": {
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --name auto_migration",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "build": "prisma generate",
    "clean": "rimraf client node_modules .turbo"
  },

  "dependencies": {
    "@prisma/client": "^6.18.0"
  },
  "devDependencies": {
    "prisma": "^6.18.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "bcrypt": "^6.0.0",
    "@types/bcrypt": "^6.0.0"
  }
}
